.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 157rpx;
  height: 128rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 40rpx;
  color: #000;
}

.userinfo-categery {
  color: #aaa;
  font-size: 28rpx;
}

.usermotto {
  border-style: dashed;
  border-color: #aaa;
  border-bottom: 1rpx;
  border-left: 1rpx;
  border-right: 1rpx;
  display: flex;
  margin-top: 20rpx;
  flex-direction: column;
}

