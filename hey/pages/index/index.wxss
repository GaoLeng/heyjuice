.item-view {
  display: flex;
  align-items: center;
  height: 100rpx;
}

.title {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.item-view .address, .item-view .time, .item-view .phone, .item-view .photo {
  font-size: 30rpx;
  color: #222;
  width: 100%;
  margin-left: 15rpx;
}

.item-view .item-open {
  width: 40rpx;
  height: 40rpx;
}

.address-img {
  width: 30rpx;
  height: 30rpx;
}

.scroll-view {
  height: 650rpx;
  margin-left: 45rpx;
  width: 92%;
}

.scroll-view-item {
  margin-right: 10rpx;
  height: 320rpx;
  display: inline-block;
}

